  <div class="hearts" id="hearts"></div>

  <script>
    const noBtn  = document.getElementById("no");
    const yesBtn = document.getElementById("yes");
    const app    = document.getElementById("app");
    const hearts = document.getElementById("hearts");
    const hint   = document.getElementById("hint");

    const maxClicks = 5;
    let clicks = 0;

    let noScale  = 1.00;   // rojo crece
    let yesScale = 1.00;   // verde crece m√°s

    function popHearts(n=14){
      for(let i=0;i<n;i++){
        const el = document.createElement("div");
        el.className = "heart";
        el.textContent = ["üíñ","üíò","üíù","‚ù§Ô∏è","üíï"][Math.floor(Math.random()*5)];
        el.style.left = (Math.random()*100) + "vw";
        el.style.top  = (65 + Math.random()*25) + "vh";
        el.style.fontSize = (16 + Math.random()*18) + "px";
        hearts.appendChild(el);
        setTimeout(()=>el.remove(), 2300);
      }
    }

    function clampScale(s){ return Math.min(Math.max(s, 0.7), 2.4); }

    noBtn.addEventListener("click", () => {
      clicks++;

      // Crecimientos
      noScale  = clampScale(noScale  + 0.10);  // crece rojo
      yesScale = clampScale(yesScale + 0.22);  // crece m√°s verde

      noBtn.style.transform  = `scale(${noScale})`;
      yesBtn.style.transform = `scale(${yesScale})`;

      // Textos por click
      const remaining = Math.max(0, maxClicks - clicks);

      if (clicks === 1) noBtn.textContent = "¬øSegura? ü•∫";
      if (clicks === 2) noBtn.textContent = "√öltima vez‚Ä¶ üò≥";
      if (clicks === 3) noBtn.textContent = "Me rompes el coraz√≥n üíî";
      if (clicks === 4) noBtn.textContent = "Ya di que s√≠ üò≠";

      hint.textContent = remaining > 0
        ? `Te quedan ${remaining} oportunidades para decir que no üòè`
        : `Ok... ya no hay m√°s opciones üòÖ`;

      popHearts(6);

      // Al 5to click: ‚Äúse rinde‚Äù
      if (clicks >= maxClicks) {
        noBtn.textContent = "Ok‚Ä¶ s√≠ üò≥";
        noBtn.disabled = true;
        noBtn.style.filter = "grayscale(0.2) brightness(0.95)";
        yesBtn.style.transform = `scale(${clampScale(yesScale + 0.35)})`;
        popHearts(12);
      }
    });

    yesBtn.addEventListener("click", () => {
      popHearts(24);
      document.body.style.background = "linear-gradient(135deg,#ff5fa2,#ffc0cb)";
      app.innerHTML = `
        <div class="final">
          <h2>¬°SAB√çA QUE DIR√çAS QUE S√ç! üòçüíñ</h2>
          <p>
            Fatima Gamez Acu√±a‚Ä¶<br>
            Gracias por hacerme tan feliz ü•π<br>
            <strong>¬øCu√°ndo te veo para darte tu sorpresa? üíù</strong>
          </p>
          <div style="margin-top:16px;font-size:1.05rem;color:#fff;opacity:.95;">
            <strong>Ahora ya eres mi San Valent√≠n üíò</strong>
          </div>
        </div>
      `;
    });
  </script>
